<Window x:Class="Airline_Reservation_Project.LoginScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Airline_Reservation_Project"
        mc:Ignorable="d"
        Title="Airline Reservation System Login" Height="300" Width="400" FontSize="14">
    <StackPanel Margin="20">
        <Label Content="Login" FontSize="25" HorizontalAlignment="Center"/>
        <Separator></Separator>
        <Label Content="Username" />
        <TextBox Name="txtUsername" TextChanged="txtUsername_TextChanged"/>
        <Label Content="Password"/>
        <PasswordBox Name="txtPassword"/>
        <Button Name="btnSubmit" Click="btnSubmit_Click" Content="Submit" Margin="60 10"/>
    </StackPanel>
</Window>
